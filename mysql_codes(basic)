CREATE TABLE student(
    student_id INT,
    name VARCHAR(20) NON NULL,
    major VARCHAR(20) UNIQUE,
    PRIMARY KEY(student_id)
);

CREATE TABLE student(
    student_id INT,
    name VARCHAR(20) ,
    major VARCHAR(20) DEFFAULT "undecided",
    PRIMARY KEY(student_id)
);

CREATE TABLE student(
    student_id INT AUTO INCREMENT,
    name VARCHAR(20) ,
    major VARCHAR(20) DEFFAULT "undecided",
    PRIMARY KEY(student_id)
);
